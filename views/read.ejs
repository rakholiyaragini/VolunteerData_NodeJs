<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Data</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
</head>

<body>
    <div class="container mx-auto">
        <h2 style="text-align: center;" class="p-4">Volunteer's Data</h2>
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>E-mail</th>
                    <th>Phone</th>
                    <th>Skill</th>
                    <th>Edi..</th>
                </tr>
            </thead>
            <tbody>
                <% todos.forEach((f)=>{ %>
                    <tr>
                        <td><%= f.id %></td>
                        <td><%= f.name %></td>
                        <td><%= f.email %></td>
                        <td><%= f.number %></td>
                        <td><%= f.skill %></td>
                        <td>
                            <!-- edit-btn -->
                            <a href="/edit/<%= f.id %>" class="btn btn-primary">Edit</a>
                            <!-- delete-btn -->
                            <a href="/delet/<%= f.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <div class="text-center">
            <a href="/index" class="btn btn-dark mt-5">Go Back To Home..</a>
        </div>
    </div>

    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>